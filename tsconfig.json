{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2017"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": false,
        "noEmit": true
    },
    "include": [
        "src"
    ]
}